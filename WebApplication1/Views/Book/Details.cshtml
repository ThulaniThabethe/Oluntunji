@model WebApplication1.Models.Book
@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 400px; object-fit: cover;">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                    <i class="bi bi-book" style="font-size: 6rem; color: #ccc;"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p class="text-muted">by @Model.Author</p>
            
            <div class="mb-3">
                <h3 class="text-primary">R @Model.Price.ToString("F2")</h3>
                <p><strong>Availability:</strong> 
                    @if (Model.IsAvailable && Model.StockQuantity > 0)
                    {
                        <span class="text-success">In Stock (@Model.StockQuantity available)</span>
                    }
                    else
                    {
                        <span class="text-danger">Out of Stock</span>
                    }
                </p>
            </div>

            <div class="mb-3">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Publisher:</strong> @Model.Publisher</p>
                    <p><strong>ISBN:</strong> @Model.ISBN</p>
                    <p><strong>Publication Year:</strong> @(Model.PublicationYear != null ? Model.PublicationYear.ToString() : "N/A")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Category:</strong> @(Model.Category ?? "N/A")</p>
                    <p><strong>Genre:</strong> @(Model.Genre ?? "N/A")</p>
                    <p><strong>Seller:</strong> @(Model.Seller != null ? Model.Seller.FullName : "Unknown")</p>
                </div>
            </div>

            <div class="mb-3">
                @if (Model.IsAvailable && Model.StockQuantity > 0)
                {
                    <form action="/Cart/AddToCart" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="bookId" value="@Model.BookId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
                }
                @Html.ActionLink("Back to Browse", "Browse", null, new { @class = "btn btn-outline-secondary btn-lg ms-2" })
            </div>

            @if (Model.IsFeatured)
            {
                <div class="alert alert-info">
                    <i class="bi bi-star-fill"></i> This book is featured in our collection!
                </div>
            }
        </div>
    </div>
</div>



<!-- Reviews Section -->
<div class="container mt-5">
    <h3>Customer Reviews</h3>
    
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <div class="row">
            @foreach (var review in Model.Reviews)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@review.Customer.FullName</h5>
                                <div class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>
                            </div>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar"></i> @review.ReviewDate.ToString("MMMM dd, yyyy")
                            </p>
                            <p class="card-text">@review.ReviewText</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No reviews yet. Be the first to review this book!
        </div>
    }
    
    <div class="mt-4">
        @Html.ActionLink("Write a Review", "WriteReview", "Book", new { id = Model.BookId }, new { @class = "btn btn-primary" })
    </div>
</div>