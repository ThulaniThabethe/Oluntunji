@{
    ViewBag.Title = "Returns & Refunds";
    ViewBag.Description = "Learn about our return policy, refund process, and exchange options at Connect2us - Your premier platform for literature.";
}

<!-- Returns & Refunds Page -->
<div class="returns-page">
    <!-- Hero Section -->
    <div class="hero-section bg-gradient-warning text-dark py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">Returns & Refunds</h1>
                    <p class="lead mb-4">We want you to be completely satisfied with your purchase. Our hassle-free return policy makes it easy to return or exchange items that don't meet your expectations.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="#return-policy" class="btn btn-primary btn-lg">
                            <i class="fas fa-undo me-2"></i>Return Policy
                        </a>
                        <a href="#return-process" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-process me-2"></i>Return Process
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="hero-icon">
                        <i class="fas fa-undo fa-8x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Return Policy Overview -->
    <div class="return-policy py-5 bg-light" id="return-policy">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="fw-bold">30-Day Return Policy</h2>
                    <p class="text-muted">We offer a generous 30-day return window for most items</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="policy-card bg-white rounded shadow-sm p-4 h-100 text-center">
                        <div class="policy-icon text-success mb-3">
                            <i class="fas fa-calendar-check fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">30 Days</h4>
                        <p class="text-muted mb-3">Return window from delivery date</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Easy returns process</li>
                            <li><i class="fas fa-check text-success me-2"></i>No questions asked</li>
                            <li><i class="fas fa-check text-success me-2"></i>Free return shipping*</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="policy-card bg-white rounded shadow-sm p-4 h-100 text-center">
                        <div class="policy-icon text-primary mb-3">
                            <i class="fas fa-box-open fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">Original Condition</h4>
                        <p class="text-muted mb-3">Items must be in original condition</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Unopened packaging</li>
                            <li><i class="fas fa-check text-success me-2"></i>No damage or wear</li>
                            <li><i class="fas fa-check text-success me-2"></i>All accessories included</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="policy-card bg-white rounded shadow-sm p-4 h-100 text-center">
                        <div class="policy-icon text-warning mb-3">
                            <i class="fas fa-money-bill-wave fa-3x"></i>
                        </div>
                        <h4 class="fw-bold">Full Refund</h4>
                        <p class="text-muted mb-3">Original payment method refund</p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Processing within 5-7 days</li>
                            <li><i class="fas fa-check text-success me-2"></i>Original shipping refunded</li>
                            <li><i class="fas fa-check text-success me-2"></i>No restocking fees</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Return Process -->
    <div class="return-process py-5" id="return-process">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="fw-bold">How to Return an Item</h2>
                    <p class="text-muted">Follow these simple steps to process your return</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="process-step text-center">
                        <div class="step-number bg-primary text-white rounded-circle mx-auto mb-3">
                            <span class="h4 fw-bold">1</span>
                        </div>
                        <h5>Request Return</h5>
                        <p class="text-muted">Log into your account and request a return authorization within 30 days of delivery</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="process-step text-center">
                        <div class="step-number bg-success text-white rounded-circle mx-auto mb-3">
                            <span class="h4 fw-bold">2</span>
                        </div>
                        <h5>Package Item</h5>
                        <p class="text-muted">Pack the item securely in original packaging with all accessories and documentation</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="process-step text-center">
                        <div class="step-number bg-warning text-white rounded-circle mx-auto mb-3">
                            <span class="h4 fw-bold">3</span>
                        </div>
                        <h5>Ship Return</h5>
                        <p class="text-muted">Attach the provided return label and drop off at your nearest courier location</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="process-step text-center">
                        <div class="step-number bg-info text-white rounded-circle mx-auto mb-3">
                            <span class="h4 fw-bold">4</span>
                        </div>
                        <h5>Receive Refund</h5>
                        <p class="text-muted">Once we receive and inspect your return, we'll process your refund within 5-7 business days</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Non-Returnable Items -->
    <div class="non-returnable py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="non-returnable-card bg-white rounded shadow-sm p-4">
                        <h3 class="fw-bold text-danger mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>Non-Returnable Items
                        </h3>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Digital Products:</strong> eBooks, audiobooks, and digital downloads
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Gift Cards:</strong> All gift cards and vouchers
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Personalized Items:</strong> Custom or personalized books
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Magazines:</strong> Single issue magazines and periodicals
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Opened Items:</strong> Books with broken seals or removed shrink wrap
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Damaged Items:</strong> Items damaged after delivery
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Clearance Items:</strong> Final sale or clearance items
                                    </li>
                                    <li class="mb-3">
                                        <i class="fas fa-times text-danger me-2"></i>
                                        <strong>Expired Promotions:</strong> Items from expired promotional offers
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Refund Information -->
    <div class="refund-info py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="fw-bold">Refund Information</h2>
                    <p class="text-muted">How and when you'll receive your refund</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="refund-card bg-white rounded shadow-sm p-4 h-100">
                        <h4 class="fw-bold text-primary mb-3">
                            <i class="fas fa-credit-card me-2"></i>Refund Method
                        </h4>
                        <p class="text-muted mb-3">Refunds are processed to your original payment method</p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Credit/Debit cards: 3-5 business days</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>PayPal: 1-2 business days</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Bank transfer: 5-7 business days</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Store credit: Immediate</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="refund-card bg-white rounded shadow-sm p-4 h-100">
                        <h4 class="fw-bold text-success mb-3">
                            <i class="fas fa-clock me-2"></i>Processing Time
                        </h4>
                        <p class="text-muted mb-3">Once we receive your returned item</p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Inspection: 1-2 business days</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Refund processing: 1 business day</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Bank processing: Varies by institution</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Email notification: Same day</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Return Shipping -->
    <div class="return-shipping py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="shipping-card bg-white rounded shadow-sm p-4">
                        <h3 class="fw-bold text-info mb-4">
                            <i class="fas fa-truck me-2"></i>Return Shipping
                        </h3>
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-success mb-3">Free Return Shipping*</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Defective or damaged items</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Wrong items sent</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Items not as described</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-warning mb-3">Customer Pays Return Shipping</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-times text-warning me-2"></i>Change of mind returns</li>
                                    <li class="mb-2"><i class="fas fa-times text-warning me-2"></i>Incorrect size or color</li>
                                    <li class="mb-2"><i class="fas fa-times text-warning me-2"></i>No longer needed items</li>
                                </ul>
                            </div>
                        </div>
                        <p class="text-muted mt-3">
                            <small>*Free return shipping applies to valid returns within South Africa. International returns may incur additional costs.</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Support -->
    <div class="contact-support py-5 bg-primary text-white">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">Need Help with Returns?</h2>
            <p class="lead mb-4">Our customer service team is here to help you with the return process.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("ContactUs", "Home")" class="btn btn-light btn-lg">
                    <i class="fas fa-envelope me-2"></i>Contact Support
                </a>
                <a href="tel:+27215550123" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-phone me-2"></i>Call +27 (021) 555-0123
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #ffc107 0%, #ffeb3b 100%);
    }
    
    .policy-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .policy-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }
    
    .step-number {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .non-returnable-card {
        border-left: 4px solid #dc3545;
    }
    
    .refund-card {
        border: 1px solid #e9ecef;
        transition: box-shadow 0.3s ease;
    }
    
    .refund-card:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .shipping-card {
        border-left: 4px solid #17a2b8;
    }
</style>