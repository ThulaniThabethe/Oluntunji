@{
    ViewBag.Title = "Connect2us - Your Premier Platform";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Welcome to Connect2us</h1>
                    <p class="hero-subtitle">Discover our finest collection of books, from local authors to international bestsellers</p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("Browse", "Book")" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-book"></i> Browse Books
                        </a>
                        <a href="@Url.Action("Index", "Category")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-tags"></i> Shop by Category
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="/Content/Images/hero-books.jpg" alt="Connect2us Books" class="img-fluid rounded-3 shadow-lg">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books -->
<section class="featured-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Featured Books</h2>
            <p class="section-subtitle">Handpicked selections from our collection</p>
        </div>
        
        <div class="row" id="featured-books">
            @foreach (var book in ViewBag.FeaturedBooks)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="book-card">
                        <div class="book-cover">
                            <img src="@book.CoverImageUrl" alt="@book.Title" class="img-fluid">
                            <div class="book-overlay">
                                <a href="@Url.Action("Details", "Book", new { id = book.BookId })" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                        <div class="book-info">
                            <h5 class="book-title">@book.Title</h5>
                            <p class="book-author">by @book.Author</p>
                            <div class="book-price">
                                <span class="price">R @book.Price.ToString("0.00")</span>
                            </div>
                            <div class="book-actions">
                                <button class="btn btn-primary btn-sm add-to-cart" data-book-id="@book.BookId">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Best Sellers -->
<section class="bestsellers-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Best Sellers</h2>
            <p class="section-subtitle">Our most popular books this month</p>
        </div>
        
        <div class="row" id="bestsellers">
            @foreach (var book in ViewBag.BestSellers)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="book-card compact">
                        <div class="book-cover">
                            <img src="@book.CoverImageUrl" alt="@book.Title" class="img-fluid">
                            <div class="bestseller-badge">
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <div class="book-info">
                            <h6 class="book-title">@book.Title</h6>
                            <p class="book-author">@book.Author</p>
                            <div class="book-price">R @book.Price.ToString("0.00")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Categories -->
<section class="categories-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Browse by Category</h2>
            <p class="section-subtitle">Find your next favorite book</p>
        </div>
        
        <div class="row">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="category-card">
                        <a href="@Url.Action("Browse", "Book", new { category = category.CategoryName })">
                            <div class="category-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <h5 class="category-name">@category.CategoryName</h5>
                            <p class="category-count">@category.BookCount books</p>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Newsletter -->
<section class="newsletter-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3>Stay Updated with New Arrivals</h3>
                <p>Subscribe to our newsletter and get exclusive offers on literature</p>
            </div>
            <div class="col-lg-4">
                <form id="newsletter-form" class="d-flex">
                    <input type="email" class="form-control me-2" placeholder="Enter your email" required>
                    <button type="submit" class="btn btn-light">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
</section>