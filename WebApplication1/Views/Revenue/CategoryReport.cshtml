@model WebApplication1.Models.CategoryReportViewModel
@{
    ViewBag.Title = "Category Performance Report";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Category Performance Report</h2>
                <div>
                    @Html.ActionLink("Export PDF", "ExportCategoryReport", new { startDate = Model.StartDate, endDate = Model.EndDate }, new { @class = "btn btn-danger btn-sm me-2" })
                    @Html.ActionLink("Back to Reports", "Reports", null, new { @class = "btn btn-secondary btn-sm" })
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Report Period: @Model.StartDate.ToString("yyyy-MM-dd") to @Model.EndDate.ToString("yyyy-MM-dd")</h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("CategoryReport", "Revenue", FormMethod.Get, new { @class = "row g-3" }))
                            {
                                <div class="col-md-4">
                                    <label for="startDate" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-4">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">&nbsp;</label>
                                    <div>
                                        <button type="submit" class="btn btn-primary me-2">Update Report</button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="setCurrentMonth()">Current Month</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Category Revenue Distribution</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="categoryPieChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Category Performance Trend</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="categoryTrendChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Category Performance Summary</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategoryData != null && Model.CategoryData.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Revenue</th>
                                        <th>Orders</th>
                                        <th>Books Sold</th>
                                        <th>Avg Order Value</th>
                                        <th>Market Share</th>
                                        <th>Growth</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.CategoryData.OrderByDescending(c => c.Revenue))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@category.CategoryName</strong>
                                            </td>
                                            <td>@category.Revenue.ToString("C")</td>
                                            <td>@category.OrderCount</td>
                                            <td>@category.BooksSold</td>
                                            <td>@category.AverageOrderValue.ToString("C")</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: @(category.MarketShare)%">
                                                        @category.MarketShare.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (category.GrowthRate > 0)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-arrow-up"></i> @category.GrowthRate.ToString("F1")%
                                                    </span>
                                                }
                                                else if (category.GrowthRate < 0)
                                                {
                                                    <span class="text-danger">
                                                        <i class="fas fa-arrow-down"></i> @Math.Abs(category.GrowthRate).ToString("F1")%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">0%</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No category data available for the selected period.</p>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Top Books by Category</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.TopBooksByCategory != null && Model.TopBooksByCategory.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Category</th>
                                                <th>Book Title</th>
                                                <th>Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.TopBooksByCategory.Take(10))
                                            {
                                                <tr>
                                                    <td>@book.Category</td>
                                                    <td>@book.BookTitle</td>
                                                    <td>@book.Revenue.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No book data available.</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Category Insights</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6>Best Performing Category</h6>
                                <p class="text-success">
                                    <strong>@Model.BestPerformingCategory?.CategoryName</strong> - @Model.BestPerformingCategory?.Revenue.ToString("C")
                                </p>
                            </div>
                            <div class="mb-3">
                                <h6>Fastest Growing Category</h6>
                                <p class="text-info">
                                    <strong>@Model.FastestGrowingCategory?.CategoryName</strong> - @Model.FastestGrowingCategory?.GrowthRate.ToString("F1")% growth
                                </p>
                            </div>
                            <div class="mb-3">
                                <h6>Most Popular Category</h6>
                                <p class="text-primary">
                                    <strong>@Model.MostPopularCategory?.CategoryName</strong> - @Model.MostPopularCategory?.OrderCount orders
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Category Pie Chart
            var ctx = document.getElementById('categoryPieChart').getContext('2d');
            var categoryPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Encode(Model.CategoryData?.Select(c => c.CategoryName))),
                    datasets: [{
                        data: @Html.Raw(Json.Encode(Model.CategoryData?.Select(c => c.Revenue))),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 205, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(199, 199, 199, 0.8)',
                            'rgba(83, 102, 255, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Category Trend Chart
            var ctx2 = document.getElementById('categoryTrendChart').getContext('2d');
            var categoryTrendChart = new Chart(ctx2, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Encode(Model.TrendData?.Select(t => t.Date.ToString("MM/dd")))),
                    datasets: [
                        @foreach (var category in Model.CategoryData?.Take(3) ?? new List<WebApplication1.Models.CategoryData>())
                        {
                            <text>
                            {
                                label: '@category.CategoryName',
                                data: @Html.Raw(Json.Encode(Model.TrendData?.Where(t => t.Category == category.CategoryName).Select(t => t.Revenue))),
                                borderColor: 'rgba(@(new Random().Next(0,255)), @(new Random().Next(0,255)), @(new Random().Next(0,255)), 1)',
                                backgroundColor: 'rgba(@(new Random().Next(0,255)), @(new Random().Next(0,255)), @(new Random().Next(0,255)), 0.2)',
                                tension: 0.1
                            },
                            </text>
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });

        function setCurrentMonth() {
            var today = new Date();
            var firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            var lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);
            
            document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
            document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
        }
    </script>
}