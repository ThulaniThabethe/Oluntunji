@section Scripts {
    <script>
        function approveOrder(orderId) {
            if (confirm('Are you sure you want to approve this order?')) {
                $.ajax({
                    url: '@Url.Action("ApproveOrder", "Admin")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Order approved successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to approve order');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while approving the order');
                    }
                });
            }
        }

        function approveUser(userId) {
            if (confirm('Are you sure you want to approve this user?')) {
                $.ajax({
                    url: '@Url.Action("ApproveUser", "Admin")',
                    type: 'POST',
                    data: { userId: userId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('User approved successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to approve user');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while approving the user');
                    }
                });
            }
        }

        function deactivateUser(userId) {
            if (confirm('Are you sure you want to deactivate this user?')) {
                $.ajax({
                    url: '@Url.Action("DeactivateUser", "Admin")',
                    type: 'POST',
                    data: { userId: userId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('User deactivated successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to deactivate user');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while deactivating the user');
                    }
                });
            }
        }

        function generateReport() {
            // Show loading spinner
            const button = event.target;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Generating...';
            button.disabled = true;

            $.ajax({
                url: '@Url.Action("GenerateSystemReport", "Admin")',
                type: 'POST',
                success: function (response) {
                    if (response.success) {
                        toastr.success('Report generated successfully');
                        // Trigger download
                        window.open(response.downloadUrl, '_blank');
                    } else {
                        toastr.error(response.message || 'Failed to generate report');
                    }
                },
                error: function () {
                    toastr.error('An error occurred while generating the report');
                },
                complete: function () {
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            });
        }

        function viewSystemLogs() {
            window.open('@Url.Action("SystemLogs", "Admin")', '_blank');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').fadeOut('slow');
        }, 5000);

        // Add fade-in animation to cards
        $(document).ready(function() {
            $('.card').each(function(index) {
                $(this).hide().fadeIn(300 + (index * 100));
            });
        });
    </script>
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            "Active" => "success",
            "Inactive" => "secondary",
            "Suspended" => "danger",
            "Blocked" => "dark",
            _ => "secondary"
        };
    }

    private string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Seller" => "warning",
            "Customer" => "primary",
            "Employee" => "info",
            _ => "secondary"
        };
    }
}