@model WebApplication1.ViewModels.SellerDashboardViewModel

@{
    ViewData["Title"] = "Seller Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary">
                        <i class="fas fa-store me-2"></i>Seller Dashboard
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active">Seller Dashboard</li>
                        </ol>
                    </nav>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("CreateBook", "Book")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Add New Book
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@Model.TotalBooks</h4>
                            <p class="mb-0">Books Listed</p>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-primary-dark">
                    <small>
                        <a href="@Url.Action("MyBooks", "Book")" class="text-white text-decoration-none">
                            Manage Books <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@Model.TotalOrders</h4>
                            <p class="mb-0">Orders Received</p>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-shopping-bag fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-success-dark">
                    <small class="text-white-50">All time orders</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">R @Model.TotalRevenue.ToString("F2")</h4>
                            <p class="mb-0">Total Revenue</p>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-wallet fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-info-dark">
                    <small>
                        <a href="@Url.Action("RevenueReport", "Revenue")" class="text-white text-decoration-none">
                            View Reports <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@Model.BooksSold</h4>
                            <p class="mb-0">Books Sold</p>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-warning-dark">
                    <small class="text-white-50">Total units sold</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Low Stock Alert -->
        <div class="col-12 mb-4">
            @if (Model.LowStockBooks != null && Model.LowStockBooks.Any())
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>
                            <strong>Low Stock Alert!</strong> You have @Model.LowStockBooks.Count books with low stock.
                            <a href="@Url.Action("LowStock", "Book")" class="alert-link">View low stock books</a>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Recent Orders -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Recent Orders
                    </h5>
                    <a href="@Url.Action("Orders", "Seller")" class="btn btn-sm btn-outline-primary">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@order.OrderNumber</strong>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        @order.Customer.FirstName.Substring(0, 1)@order.Customer.LastName.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold">@order.Customer.FirstName @order.Customer.LastName</div>
                                                        <small class="text-muted">@order.Customer.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>R @order.TotalAmount.ToString("F2")</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(order.OrderStatus)">@order.OrderStatus</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("OrderDetails", "Orders", new { id = order.OrderId })" class="btn btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (order.OrderStatus == "Pending")
                                                    {
                                                        <button class="btn btn-outline-success" onclick="processOrder(@order.OrderId)">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    @if (order.OrderStatus == "Processing")
                                                    {
                                                        <button class="btn btn-outline-primary" onclick="shipOrder(@order.OrderId)">
                                                            <i class="fas fa-shipping-fast"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Recent Orders</h5>
                            <p class="text-muted">You haven't received any orders yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("CreateBook", "Book")" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Add New Book
                        </a>
                        <a href="@Url.Action("MyBooks", "Book")" class="btn btn-outline-primary">
                            <i class="fas fa-book me-2"></i>Manage Books
                        </a>
                        <a href="@Url.Action("LowStock", "Book")" class="btn btn-outline-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert
                        </a>
                        <a href="@Url.Action("Orders", "Seller")" class="btn btn-outline-info">
                            <i class="fas fa-shopping-bag me-2"></i>View Orders
                        </a>
                        <a href="@Url.Action("RevenueReport", "Revenue")" class="btn btn-outline-success">
                            <i class="fas fa-chart-line me-2"></i>Revenue Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Low Stock Books -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Books
                    </h5>
                    <a href="@Url.Action("LowStock", "Book")" class="btn btn-sm btn-outline-warning">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.LowStockBooks != null && Model.LowStockBooks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Book</th>
                                        <th>Stock</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.LowStockBooks.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@book.CoverImageUrl" alt="@book.Title" class="img-thumbnail me-3" style="width: 50px; height: 70px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-1">@book.Title</h6>
                                                        <small class="text-muted">by @book.Author</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">@book.StockQuantity</span>
                                            </td>
                                            <td>
                                                <strong>R @book.Price.ToString("F2")</strong>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditBook", "Book", new { id = book.BookId })" class="btn btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-outline-success" onclick="restockBook(@book.BookId)">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Stock Levels Good</h5>
                            <p class="text-muted">No books are currently low on stock.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Performance Summary -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Performance Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-center">
                                <div class="bg-primary text-white rounded-circle p-3 mx-auto mb-2" style="width: 60px; height: 60px;">
                                    <i class="fas fa-percentage fa-2x"></i>
                                </div>
                                <h6 class="mb-0">Avg Order</h6>
                                <small class="text-muted">R @((Model.TotalOrders > 0 ? Model.TotalRevenue / Model.TotalOrders : 0).ToString("F2"))</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <div class="bg-success text-white rounded-circle p-3 mx-auto mb-2" style="width: 60px; height: 60px;">
                                    <i class="fas fa-book-open fa-2x"></i>
                                </div>
                                <h6 class="mb-0">Books/Order</h6>
                                <small class="text-muted">@((Model.TotalOrders > 0 ? (double)Model.BooksSold / Model.TotalOrders : 0).ToString("F1"))</small>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-grid">
                        <a href="@Url.Action("RevenueReport", "Revenue")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-chart-line me-1"></i>Detailed Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;
        }

        .bg-primary-dark {
            background-color: #0056b3 !important;
        }

        .bg-success-dark {
            background-color: #218838 !important;
        }

        .bg-info-dark {
            background-color: #138496 !important;
        }

        .bg-warning-dark {
            background-color: #e0a800 !important;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .alert-dismissible .btn-close {
            position: absolute;
            top: 0;
            right: 0;
            z-index: 2;
            padding: 0.75rem 1.25rem;
            background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23000'%3e%3cpath d='M.293.293a1 1 0 011.414 0L8 6.586 14.293.293a1 1 0 111.414 1.414L9.414 8l6.293 6.293a1 1 0 01-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 01-1.414-1.414L6.586 8 .293 1.707a1 1 0 010-1.414z'/%3e%3c/svg%3e") center/1em auto no-repeat;
            border: 0;
            border-radius: 0.25rem;
            opacity: 0.5;
        }
    </style>
}

@section Scripts {
    <script>
        function processOrder(orderId) {
            if (confirm('Are you sure you want to process this order?')) {
                $.ajax({
                    url: '@Url.Action("ProcessOrder", "Seller")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Order processed successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to process order');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while processing the order');
                    }
                });
            }
        }

        function shipOrder(orderId) {
            if (confirm('Are you sure you want to mark this order as shipped?')) {
                $.ajax({
                    url: '@Url.Action("ShipOrder", "Seller")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Order marked as shipped successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to ship order');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while shipping the order');
                    }
                });
            }
        }

        function restockBook(bookId) {
            // Show a modal or prompt for restock quantity
            const quantity = prompt('Enter restock quantity:');
            if (quantity && parseInt(quantity) > 0) {
                $.ajax({
                    url: '@Url.Action("RestockBook", "Book")',
                    type: 'POST',
                    data: { bookId: bookId, quantity: parseInt(quantity) },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Book restocked successfully');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            toastr.error(response.message || 'Failed to restock book');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while restocking the book');
                    }
                });
            }
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').fadeOut('slow');
        }, 5000);

        // Add fade-in animation to cards
        $(document).ready(function() {
            $('.card').each(function(index) {
                $(this).hide().fadeIn(300 + (index * 100));
            });
        });
    </script>
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}