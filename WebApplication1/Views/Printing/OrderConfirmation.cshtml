@model WebApplication1.Models.PrintRequest
@using WebApplication1.Models
@{
    ViewBag.Title = "Order Confirmation";
}

<style>
    .confirmation-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
    }

    .confirmation-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #28a745;
    }

    .confirmation-header h2 {
        font-weight: 700;
        color: #28a745;
        margin-bottom: 0.5rem;
    }

    .success-icon {
        font-size: 4rem;
        color: #28a745;
        margin-bottom: 1rem;
    }

    .order-details {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid #dee2e6;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #dee2e6;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
    }

    .detail-value {
        color: #343a40;
    }

    .status-badge {
        background-color: #ffc107;
        color: #212529;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .btn-action {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        margin: 0.5rem;
        transition: all 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
    }

    .next-steps {
        background-color: #d1ecf1;
        border-left: 4px solid #17a2b8;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 2rem;
    }

    .next-steps h5 {
        color: #0c5460;
        margin-bottom: 0.5rem;
    }

    .next-steps ul {
        margin-bottom: 0;
        color: #0c5460;
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-header">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h2>Order Confirmed!</h2>
        <p class="text-muted">Your print request has been successfully submitted</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="order-details">
        <h5><i class="fas fa-receipt"></i> Order Details</h5>
        
        <div class="detail-row">
            <span class="detail-label">Order ID:</span>
            <span class="detail-value">#@Model.PrintRequestId</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">File Name:</span>
            <span class="detail-value">@System.IO.Path.GetFileName(Model.FilePath)</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Pages:</span>
            <span class="detail-value">@Model.PageCount pages</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Delivery Option:</span>
            <span class="detail-value">
                @if (Model.Option == DeliveryOrPickup.Delivery)
                {
                    @:<i class="fas fa-truck"></i> Home Delivery
                }
                else
                {
                    @:<i class="fas fa-store"></i> In-Store Pickup
                }
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Total Cost:</span>
            <span class="detail-value"><strong>R@Model.Cost</strong></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Order Date:</span>
            <span class="detail-value">@Model.RequestDate.ToString("dd MMM yyyy, HH:mm")</span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Status:</span>
            <span class="detail-value">
                <span class="status-badge">
                    <i class="fas fa-clock"></i> @Model.Status
                </span>
            </span>
        </div>
    </div>

    <div class="next-steps">
        <h5><i class="fas fa-info-circle"></i> What happens next?</h5>
        <ul>
            <li>Your document will be processed within 24 hours</li>
            <li>You'll receive an email notification when your order is ready</li>
            @if (Model.Option == WebApplication1.Models.DeliveryOrPickup.Delivery)
            {
                <li>Your documents will be delivered to your registered address</li>
                <li>Delivery typically takes 1-2 business days after processing</li>
            }
            else
            {
                <li>You can collect your documents from our store during business hours</li>
                <li>Please bring a valid ID when collecting your order</li>
            }
        </ul>
    </div>

    <div class="text-center">
        @Html.ActionLink("View Order History", "History", "Printing", null, new { @class = "btn btn-primary btn-action" })
        @Html.ActionLink("Print Another Document", "Upload", "Printing", null, new { @class = "btn btn-success btn-action" })
    </div>

    <div class="mt-3 text-center">
        <small class="text-muted">
            <i class="fas fa-phone"></i> Need help? Contact us at support@bookstore.co.za or call (011) 123-4567
        </small>
    </div>
</div>