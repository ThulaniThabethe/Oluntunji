@{
    ViewBag.Title = "Database Initialization";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas fa-database"></i> Database Initialization
                    </h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        if (ViewBag.Success)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle"></i>
                                <strong>Success!</strong> @ViewBag.Message
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle"></i>
                                <strong>Error!</strong> @ViewBag.Message
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    }
                    
                    <div class="text-center">
                        <h4 class="mb-3">Database Status</h4>
                        <p>Click the button below to initialize or reset the database with sample data.</p>
                        
                        <div class="d-grid gap-2 d-md-block mb-3">
                            <a href="@Url.Action("Initialize", "Database")" class="btn btn-primary me-md-2">
                                <i class="fas fa-play"></i> Initialize Database
                            </a>
                            <a href="@Url.Action("Reset", "Database")" class="btn btn-warning" onclick="return confirm('Are you sure you want to reset the database? This will delete all existing data.');">
                                <i class="fas fa-redo"></i> Reset Database
                            </a>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-block">
                            <a href="@Url.Action("TestConnection", "Database")" class="btn btn-info me-md-2">
                                <i class="fas fa-plug"></i> Test Database Connection
                            </a>
                            <button type="button" class="btn btn-success" onclick="createNotificationsTable()">
                                <i class="fas fa-bell"></i> Create Notifications Table
                            </button>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <h5>Sample Data Included:</h5>
                    <ul>
                        <li><strong>Admin Account:</strong> admin@connect2us.co.za / Admin@123</li>
                        <li><strong>Employee Account:</strong> employee@connect2us.co.za / Employee@123</li>
                        <li><strong>Seller Account:</strong> seller@connect2us.co.za / Seller@123</li>
                        <li><strong>Customer Account:</strong> customer@connect2us.co.za / Customer@123</li>
                    </ul>
                    
                    <h5>Sample Books:</h5>
                    <ul>
                        <li>Long Walk to Freedom - Nelson Mandela</li>
                        <li>Cry, the Beloved Country - Alan Paton</li>
                        <li>The Power of One - Bryce Courtenay</li>
                        <li>Disgrace - J.M. Coetzee</li>
                        <li>Born a Crime - Trevor Noah</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function createNotificationsTable() {
            if (confirm('This will create the Notifications table in the database. Continue?')) {
                $.ajax({
                    url: '@Url.Action("CreateNotificationsTable", "Database")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            alert('Success: ' + response.message);
                            location.reload();
                        } else {
                            alert('Error: ' + response.message + '\n' + (response.error || ''));
                        }
                    },
                    error: function() {
                        alert('An error occurred while creating the Notifications table.');
                    }
                });
            }
        }
    </script>
}