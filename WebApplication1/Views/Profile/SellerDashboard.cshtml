@model WebApplication1.ViewModels.SellerDashboardViewModel
@{
    ViewBag.Title = "Seller Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Seller Dashboard</h1>
            <p class="text-muted">Manage your books and track your sales performance</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Books</h6>
                            <h2 class="mb-0">@Model.TotalBooks</h2>
                        </div>
                        <i class="bi bi-book fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Orders</h6>
                            <h2 class="mb-0">@Model.TotalOrders</h2>
                        </div>
                        <i class="bi bi-cart fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Revenue</h6>
                            <h2 class="mb-0">R @Model.TotalRevenue.ToString("F2")</h2>
                        </div>
                        <i class="bi bi-currency-dollar fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Books Sold</h6>
                            <h2 class="mb-0">@Model.BooksSold</h2>
                        </div>
                        <i class="bi bi-graph-up fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Low Stock Books -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Low Stock Alert
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.LowStockBooks != null && Model.LowStockBooks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Book Title</th>
                                        <th>Stock</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.LowStockBooks)
                                    {
                                        <tr>
                                            <td>@book.Title</td>
                                            <td>
                                                <span class="badge bg-danger">@book.StockQuantity</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Books", new { id = book.BookId })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-check-circle fa-3x mb-3"></i>
                            <p>No books with low stock!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock"></i> Recent Orders
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>#@order.OrderId</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>R @order.TotalAmount.ToString("F2")</td>
                                            <td>
                                                <span class="badge bg-@GetStatusColor(order.OrderStatus)">@order.OrderStatus</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-bag fa-3x mb-3"></i>
                            <p>No recent orders found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Create", "Books")" class="btn btn-primary btn-block">
                                <i class="bi bi-plus"></i> Add New Book
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Index", "Books")" class="btn btn-outline-primary btn-block">
                                <i class="bi bi-list"></i> Manage Books
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("OrderHistory", "Profile")" class="btn btn-outline-success btn-block">
                                <i class="bi bi-clock-history"></i> Order History
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-info btn-block">
                                <i class="bi bi-person"></i> Profile Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusColor(string status)
    {
        switch (status.ToLower())
        {
            case "pending":
                return "warning";
            case "delivered":
                return "success";
            case "cancelled":
                return "danger";
            case "shipped":
                return "info";
            default:
                return "secondary";
        }
    }
}