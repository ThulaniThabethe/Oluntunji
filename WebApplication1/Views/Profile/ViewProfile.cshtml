@model WebApplication1.ViewModels.ViewProfileViewModel

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="position-relative d-inline-block mb-3">
                        <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/Content/Images/default-avatar.png")" 
                             alt="Profile Image" 
                             class="rounded-circle img-thumbnail" 
                             style="width: 120px; height: 120px; object-fit: cover;">
                    </div>
                    <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-2">@Model.Email</p>
                    <span class="badge bg-primary mb-3">@Model.Role</span>
                    
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-telephone"></i> Contact Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Phone Number</small>
                        <strong>@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "Not provided")</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Address</small>
                        <strong>
                            @if (!string.IsNullOrEmpty(Model.AddressLine1))
                            {
                                @Model.AddressLine1<br>
                                if (!string.IsNullOrEmpty(Model.AddressLine2))
                                {
                                    @Model.AddressLine2<br>
                                }
                                @Model.City, @Model.Province @Model.PostalCode
                            }
                            else
                            {
                                <text>Not provided</text>
                            }
                        </strong>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up"></i> Account Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h5 class="text-primary mb-1">@Model.TotalOrders</h5>
                            <small class="text-muted">Total Orders</small>
                        </div>
                        <div class="col-6">
                            <h5 class="text-success mb-1">@Model.TotalReviews</h5>
                            <small class="text-muted">Reviews</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">First Name</small>
                            <strong>@Model.FirstName</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Last Name</small>
                            <strong>@Model.LastName</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Email Address</small>
                            <strong>@Model.Email</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Member Since</small>
                            <strong>@Model.MemberSince.ToString("MMMM dd, yyyy")</strong>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block">Bio</small>
                            <p class="mb-0">@Model.Bio</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Role-Specific Information -->
            @if (Model.Role == "Seller" && !string.IsNullOrEmpty(Model.SellerBusinessName))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shop"></i> Seller Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block">Business Name</small>
                                <strong>@Model.SellerBusinessName</strong>
                            </div>
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block">Website</small>
                                <strong>
                                    @if (!string.IsNullOrEmpty(Model.SellerWebsite))
                                    {
                                        <a href="@Model.SellerWebsite" target="_blank" class="text-decoration-none">@Model.SellerWebsite</a>
                                    }
                                    else
                                    {
                                        <text>Not provided</text>
                                    }
                                </strong>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.SellerDescription))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block">Business Description</small>
                                <p class="mb-0">@Model.SellerDescription</p>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.Role == "Employee" && !string.IsNullOrEmpty(Model.EmployeeDepartment))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-badge"></i> Employee Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block">Department</small>
                                <strong>@Model.EmployeeDepartment</strong>
                            </div>
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block">Position</small>
                                <strong>@(!string.IsNullOrEmpty(Model.EmployeePosition) ? Model.EmployeePosition : "Not specified")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Preferences -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear"></i> Preferences
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Preferred Language</small>
                            <strong>
                                @switch (Model.PreferredLanguage)
                                {
                                    case "en":
                                        <text>English</text>
                                        break;
                                    case "af":
                                        <text>Afrikaans</text>
                                        break;
                                    case "zu":
                                        <text>Zulu</text>
                                        break;
                                    case "xh":
                                        <text>Xhosa</text>
                                        break;
                                    default:
                                        <text>English</text>
                                        break;
                                }
                            </strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Time Zone</small>
                            <strong>@(Model.TimeZone.Replace("_", " "))</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Email Notifications</small>
                            <span class="badge @(Model.EmailNotifications ? "bg-success" : "bg-secondary")">
                                @(Model.EmailNotifications ? "Enabled" : "Disabled")
                            </span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">SMS Notifications</small>
                            <span class="badge @(Model.SmsNotifications ? "bg-success" : "bg-secondary")">
                                @(Model.SmsNotifications ? "Enabled" : "Disabled")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivity != null && Model.RecentActivity.Any())
                    {
                        <div class="timeline">
                            @foreach (var activity in Model.RecentActivity.Take(5))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">@activity.Title</h6>
                                        <small class="text-muted">@activity.Timestamp.ToString("MMM dd, yyyy HH:mm")</small>
                                        @if (!string.IsNullOrEmpty(activity.Description))
                                        {
                                            <p class="mb-0 mt-1">@activity.Description</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No recent activity to display.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any interactive functionality here
            console.log('Profile page loaded');
        });
    </script>
}

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 12px;
            transition: transform 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-2px);
        }
        
        .card-header {
            border-radius: 12px 12px 0 0 !important;
            font-weight: 600;
        }
        
        .display-5 {
            font-weight: 700;
        }
        
        .text-primary {
            color: #0d6efd !important;
        }
        
        .bg-primary {
            background-color: #0d6efd !important;
        }
        
        .badge {
            font-size: 0.75rem;
            padding: 0.5em 1em;
        }
        
        .img-thumbnail {
            border-radius: 50%;
            border: 3px solid #dee2e6;
            padding: 3px;
        }
        
        .btn {
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }
        
        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #e9ecef;
        }
        
        .timeline-item {
            position: relative;
            padding-left: 20px;
        }
        
        .timeline-marker {
            position: absolute;
            left: -22px;
            top: 5px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: #0d6efd;
        }
        
        .timeline-content {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            border-left: 3px solid #0d6efd;
        }
        
        .text-muted {
            font-size: 0.875rem;
        }
        
        small.text-muted {
            font-size: 0.75rem;
        }
        
        .d-grid .btn {
            text-align: left;
            padding: 10px 15px;
        }
        
        .d-grid .btn i {
            margin-right: 8px;
        }
        
        .row.text-center .col-6 {
            border-right: 1px solid #e9ecef;
        }
        
        .row.text-center .col-6:last-child {
            border-right: none;
        }
    </style>
}