@model WebApplication1.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="position-relative d-inline-block mb-3">
                        <img src="/Content/Images/default-avatar.png" 
                             alt="Profile Image" 
                             class="rounded-circle img-thumbnail" 
                             style="width: 120px; height: 120px; object-fit: cover;">
                    </div>
                    <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-2">@Model.Email</p>
                    <span class="badge bg-primary mb-3">@User.Identity.Name</span>
                    
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-telephone"></i> Contact Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Phone Number</small>
                        <strong>@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "Not provided")</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Address</small>
                        <strong>
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Model.Address<br>
                                @Model.City<text>,</text> @Model.Province @Model.PostalCode
                            }
                            else
                            {
                                <text>Not provided</text>
                            }
                        </strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">First Name</small>
                            <strong>@Model.FirstName</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Last Name</small>
                            <strong>@Model.LastName</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Email Address</small>
                            <strong>@Model.Email</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Username</small>
                            <strong>@Model.Username</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("OrderHistory", "Profile")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-bag"></i> Order History
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Reviews", "Profile")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-star"></i> My Reviews
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-cart"></i> Shopping Cart
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="@Url.Action("Notifications", "Notification")" class="btn btn-outline-primary w-100">
                            <i class="bi bi-bell"></i> Notifications
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
    }
    
    .img-thumbnail {
        border: 3px solid #dee2e6;
    }
</style>