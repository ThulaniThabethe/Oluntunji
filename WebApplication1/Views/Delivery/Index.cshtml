@model IEnumerable<WebApplication1.ViewModels.DeliveryListViewModel>
@{
    ViewBag.Title = "Delivery Management";
    var statistics = ViewBag.Statistics as WebApplication1.ViewModels.DeliveryStatisticsViewModel;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>@ViewBag.Title</h2>
            
            <!-- Statistics Cards -->
            @if (statistics != null)
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h5 class="card-title">Total Deliveries</h5>
                                <h3>@statistics.TotalDeliveries</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <h5 class="card-title">Pending Shipments</h5>
                                <h3>@statistics.PendingShipments</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <h5 class="card-title">In Transit</h5>
                                <h3>@statistics.InTransit</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <h5 class="card-title">Delivered</h5>
                                <h3>@statistics.Delivered</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Search and Filter -->
            <div class="row mt-4">
                <div class="col-md-6">
                    @using (Html.BeginForm("Search", "Delivery", FormMethod.Get, new { @class = "form-inline" }))
                    {
                        <div class="input-group">
                            @Html.TextBox("searchTerm", ViewBag.SearchTerm as string, new { @class = "form-control", placeholder = "Search by order number, tracking number, or customer name" })
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6 text-right">
                    @Html.ActionLink("View Statistics", "Statistics", null, new { @class = "btn btn-info" })
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Deliveries Table -->
            <div class="table-responsive mt-4">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Order Number</th>
                            <th>Customer Name</th>
                            <th>Shipping Address</th>
                            <th>Status</th>
                            <th>Tracking Number</th>
                            <th>Order Date</th>
                            <th>Shipped Date</th>
                            <th>Delivered Date</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var delivery in Model)
                        {
                            <tr>
                                <td>@delivery.OrderNumber</td>
                                <td>@delivery.CustomerName</td>
                                <td>
                                    <small>
                                        @delivery.ShippingAddress<br />
                                        @delivery.ShippingCity, @delivery.ShippingProvince @delivery.ShippingPostalCode
                                    </small>
                                </td>
                                <td>
                                    @switch (delivery.OrderStatus)
                                    {
                                        case "Shipped":
                                            <span class="badge badge-info">Shipped</span>
                                            break;
                                        case "Delivered":
                                            <span class="badge badge-success">Delivered</span>
                                            break;
                                        default:
                                            <span class="badge badge-secondary">@delivery.OrderStatus</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(delivery.TrackingNumber))
                                    {
                                        @delivery.TrackingNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@delivery.OrderDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    @if (delivery.ShippedDate.HasValue)
                                    {
                                        @delivery.ShippedDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Shipped</span>
                                    }
                                </td>
                                <td>
                                    @if (delivery.DeliveredDate.HasValue)
                                    {
                                        @delivery.DeliveredDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Delivered</span>
                                    }
                                </td>
                                <td>@delivery.TotalAmount.ToString("C")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Details", "Details", new { id = delivery.OrderId }, new { @class = "btn btn-sm btn-primary" })
                                        @Html.ActionLink("Update", "Update", new { id = delivery.OrderId }, new { @class = "btn btn-sm btn-warning" })
                                        
                                        @if (delivery.OrderStatus == "Processing")
                                        {
                                            using (Html.BeginForm("MarkAsShipped", "Delivery", FormMethod.Post, new { @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("orderId", delivery.OrderId)
                                                <button type="submit" class="btn btn-sm btn-info">Mark as Shipped</button>
                                            }
                                        }
                                        else if (delivery.OrderStatus == "Shipped")
                                        {
                                            using (Html.BeginForm("MarkAsDelivered", "Delivery", FormMethod.Post, new { @class = "d-inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("orderId", delivery.OrderId)
                                                <button type="submit" class="btn btn-sm btn-success">Mark as Delivered</button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4">
                    <h4>No deliveries found</h4>
                    <p>There are no deliveries to display at the moment.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
</style>