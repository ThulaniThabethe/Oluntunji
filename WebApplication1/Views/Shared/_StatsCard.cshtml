@{
    string icon = ViewBag.StatIcon ?? "bi-bar-chart";
    string title = ViewBag.StatTitle ?? "Stat";
    string value = ViewBag.StatValue ?? "0";
    string subtitle = ViewBag.StatSubtitle ?? "";
    string color = ViewBag.StatColor ?? "primary"; // primary, success, warning, danger, info
    string trend = ViewBag.StatTrend ?? ""; // up, down, neutral
    string trendValue = ViewBag.StatTrendValue ?? "";
    string link = ViewBag.StatLink ?? "";
    string linkText = ViewBag.StatLinkText ?? "View Details";
}

<div class="stats-card">
    <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <div class="stats-content">
                    <div class="stats-icon bg-@color bg-opacity-10 text-@color mb-3">
                        <i class="bi @icon"></i>
                    </div>
                    <h3 class="stats-value text-@color mb-1">@value</h3>
                    <p class="stats-title text-muted mb-0">@title</p>
                    
                    @if (!string.IsNullOrEmpty(subtitle))
                    {
                        <small class="text-muted">@subtitle</small>
                    }
                    
                    @if (!string.IsNullOrEmpty(trend) && !string.IsNullOrEmpty(trendValue))
                    {
                        <div class="stats-trend mt-2">
                            @if (trend == "up")
                            {
                                <small class="text-success">
                                    <i class="bi bi-arrow-up"></i> @trendValue%
                                </small>
                            }
                            else if (trend == "down")
                            {
                                <small class="text-danger">
                                    <i class="bi bi-arrow-down"></i> @trendValue%
                                </small>
                            }
                            else
                            {
                                <small class="text-muted">
                                    <i class="bi bi-arrow-right"></i> @trendValue%
                                </small>
                            }
                        </div>
                    }
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(link))
            {
                <div class="mt-3">
                    <a href="@link" class="btn btn-sm btn-outline-@color">
                        @linkText <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stats-card .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .stats-card .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
    }
    
    .stats-icon {
        width: 50px;
        height: 50px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .stats-value {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
    }
    
    .stats-title {
        font-size: 0.875rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .stats-trend small {
        font-weight: 500;
    }
    
    /* Color variations */
    .stats-card .bg-primary { background-color: rgba(13, 110, 253, 0.1) !important; color: #0d6efd !important; }
    .stats-card .bg-success { background-color: rgba(25, 135, 84, 0.1) !important; color: #198754 !important; }
    .stats-card .bg-warning { background-color: rgba(255, 193, 7, 0.1) !important; color: #ffc107 !important; }
    .stats-card .bg-danger { background-color: rgba(220, 53, 69, 0.1) !important; color: #dc3545 !important; }
    .stats-card .bg-info { background-color: rgba(13, 202, 240, 0.1) !important; color: #0dcaf0 !important; }
</style>