@model int?

@if (Model.HasValue && Model.Value > 0)
{
    <span class="badge bg-danger notification-badge" data-count="@Model.Value">
        @Model.Value
    </span>
}

<style>
    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        font-size: 0.7em;
        padding: 0.25em 0.4em;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>