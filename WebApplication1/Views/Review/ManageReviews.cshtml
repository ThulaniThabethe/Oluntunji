@model IEnumerable<WebApplication1.Models.Review>

@{
    ViewBag.Title = "Manage Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = ViewBag.CurrentUser as WebApplication1.Models.User;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Manage Reviews</h2>
            <hr />

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h4>Reviews</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            No reviews found.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Book Title</th>
                                        <th>Customer</th>
                                        <th>Rating</th>
                                        <th>Review</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in Model)
                                    {
                                        <tr>
                                            <td>@review.Book.Title</td>
                                            <td>@review.Customer.FirstName @review.Customer.LastName</td>
                                            <td>
                                                <div class="rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted"></i>
                                                        }
                                                    }
                                                    <span class="ms-1">@review.Rating/5</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="review-text" style="max-width: 300px; max-height: 100px; overflow: hidden;">
                                                    @review.ReviewText
                                                </div>
                                            </td>
                                            <td>@review.ReviewDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (review.IsApproved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                @if (User.IsInRole("Admin") || User.IsInRole("Employee") || User.IsInRole("Seller"))
                                                {
                                                    if (!review.IsApproved)
                                                    {
                                                        using (Html.BeginForm("ApproveReview", "Review", new { id = review.ReviewId }, FormMethod.Post, new { @class = "d-inline" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-success me-1" onclick="return confirm('Are you sure you want to approve this review?')">
                                                                <i class="bi bi-check-circle"></i> Approve
                                                            </button>
                                                        }

                                                        using (Html.BeginForm("RejectReview", "Review", new { id = review.ReviewId }, FormMethod.Post, new { @class = "d-inline" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-warning me-1" onclick="return confirm('Are you sure you want to reject this review?')">
                                                                <i class="bi bi-x-circle"></i> Reject
                                                            </button>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        using (Html.BeginForm("RejectReview", "Review", new { id = review.ReviewId }, FormMethod.Post, new { @class = "d-inline" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-warning me-1" onclick="return confirm('Are you sure you want to reject this review?')">
                                                                <i class="bi bi-x-circle"></i> Reject
                                                            </button>
                                                        }
                                                    }
                                                }

                                                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                                {
                                                    using (Html.BeginForm("DeleteReview", "Review", new { id = review.ReviewId }, FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating i {
        font-size: 0.9rem;
    }
    
    .review-text {
        word-wrap: break-word;
    }
    
    .table th {
        font-weight: 600;
        border-top: none;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>