@model WebApplication1.ViewModels.CartViewModel

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-shopping-cart me-2"></i>Shopping Cart
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">Cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-shopping-cart fa-5x text-muted"></i>
                        </div>
                        <h4 class="text-muted mb-3">Your cart is empty</h4>
                        <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
                        <a href="@Url.Action("Index", "Books")" class="btn btn-primary">
                            <i class="fas fa-book me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Cart Items (@Model.ItemCount)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">Product</th>
                                        <th class="border-0">Price</th>
                                        <th class="border-0 text-center">Quantity</th>
                                        <th class="border-0 text-end">Subtotal</th>
                                        <th class="border-0 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr data-cart-item-id="@item.CartItemId">
                                            <td class="align-middle">
                                                <div class="d-flex align-items-center">
                                                    <img src="@(string.IsNullOrEmpty(item.Book.CoverImageUrl) ? "https://via.placeholder.com/60x80?text=Book" : item.Book.CoverImageUrl)" 
                                                         alt="@item.Book.Title" class="img-thumbnail me-3" style="width: 60px; height: 80px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-1">@item.Book.Title</h6>
                                                        <small class="text-muted">by @item.Book.Author</small>
                                                        @if (!item.Book.IsAvailable)
                                                        {
                                                            <div><span class="badge bg-danger">Out of Stock</span></div>
                                                        }
                                                        else if (item.Book.StockQuantity < item.Quantity)
                                                        {
                                                            <div><span class="badge bg-warning">Only @item.Book.StockQuantity available</span></div>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <div class="fw-bold">R @item.Book.Price.ToString("F2")</div>
                                                @if (item.Book.IsFeatured)
                                                {
                                                    <small class="text-success"><i class="fas fa-star me-1"></i>Featured</small>
                                                }
                                            </td>
                                            <td class="align-middle text-center">
                                                <div class="input-group input-group-sm" style="width: 120px; margin: 0 auto;">
                                                    <button class="btn btn-outline-secondary btn-sm quantity-decrease" type="button" data-cart-item-id="@item.CartItemId">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" class="form-control text-center quantity-input" 
                                                           value="@item.Quantity" min="1" max="99" 
                                                           data-cart-item-id="@item.CartItemId" data-book-price="@item.Book.Price">
                                                    <button class="btn btn-outline-secondary btn-sm quantity-increase" type="button" data-cart-item-id="@item.CartItemId">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="align-middle text-end">
                                                <div class="fw-bold">R @((item.Quantity * item.Book.Price).ToString("F2"))</div>
                                            </td>
                                            <td class="align-middle text-center">
                                                <button class="btn btn-outline-danger btn-sm remove-item" data-cart-item-id="@item.CartItemId" title="Remove item">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <a href="@Url.Action("BookDetails", "Books", new { id = item.BookId })" class="btn btn-outline-info btn-sm" title="View details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Books")" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                            <button class="btn btn-outline-danger" id="clearCart">
                                <i class="fas fa-trash me-2"></i>Clear Cart
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Save for Later Section -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-bookmark me-2"></i>Saved for Later
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-0">Items you save for later will appear here.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calculator me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@Model.ItemCount items):</span>
                            <span class="fw-bold">R @Model.TotalAmount.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span class="text-success">Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (15% VAT):</span>
                            <span class="fw-bold">R @((Model.TotalAmount * 0.15m).ToString("F2"))</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h6 class="mb-0">Total:</h6>
                            <h6 class="mb-0">R @((Model.TotalAmount * 1.15m).ToString("F2"))</h6>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </a>
                            <button class="btn btn-outline-primary" id="saveCart">
                                <i class="fas fa-save me-2"></i>Save Cart
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Promo Code -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-tag me-2"></i>Promo Code
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="promoCode" placeholder="Enter promo code">
                            <button class="btn btn-outline-secondary" type="button" id="applyPromoCode">Apply</button>
                        </div>
                        <small class="text-muted">Have a promo code? Enter it here.</small>
                    </div>
                </div>

                <!-- Shipping Info -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-shipping-fast me-2"></i>Shipping Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-2">
                            <i class="fas fa-check-circle text-success me-1"></i>Free shipping on orders over R500
                        </p>
                        <p class="small text-muted mb-2">
                            <i class="fas fa-check-circle text-success me-1"></i>Delivery in 3-5 business days
                        </p>
                        <p class="small text-muted mb-0">
                            <i class="fas fa-check-circle text-success me-1"></i>Secure packaging guaranteed
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            transition: box-shadow 0.3s ease;
        }
        
        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }
        
        .quantity-input {
            border-radius: 0;
            border-left: none;
            border-right: none;
        }
        
        .quantity-decrease {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
        
        .quantity-increase {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        
        .btn {
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .breadcrumb {
            background-color: transparent;
            margin-bottom: 0;
        }
        
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
            color: #6c757d;
        }
        
        .img-thumbnail {
            border: 1px solid #dee2e6;
            transition: transform 0.3s ease;
        }
        
        .img-thumbnail:hover {
            transform: scale(1.05);
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.875rem;
            }
            
            .quantity-input {
                width: 60px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quantity decrease
            $('.quantity-decrease').on('click', function() {
                const cartItemId = $(this).data('cart-item-id');
                const input = $(`.quantity-input[data-cart-item-id="${cartItemId}"]`);
                let currentValue = parseInt(input.val());
                
                if (currentValue > 1) {
                    input.val(currentValue - 1);
                    updateQuantity(cartItemId, currentValue - 1);
                }
            });

            // Quantity increase
            $('.quantity-increase').on('click', function() {
                const cartItemId = $(this).data('cart-item-id');
                const input = $(`.quantity-input[data-cart-item-id="${cartItemId}"]`);
                let currentValue = parseInt(input.val());
                
                if (currentValue < 99) {
                    input.val(currentValue + 1);
                    updateQuantity(cartItemId, currentValue + 1);
                }
            });

            // Quantity input change
            $('.quantity-input').on('change', function() {
                const cartItemId = $(this).data('cart-item-id');
                const newQuantity = parseInt($(this).val());
                
                if (newQuantity >= 1 && newQuantity <= 99) {
                    updateQuantity(cartItemId, newQuantity);
                } else {
                    // Reset to previous valid value
                    location.reload();
                }
            });

            // Remove item
            $('.remove-item').on('click', function() {
                const cartItemId = $(this).data('cart-item-id');
                
                if (confirm('Are you sure you want to remove this item from your cart?')) {
                    removeItem(cartItemId);
                }
            });

            // Clear cart
            $('#clearCart').on('click', function() {
                if (confirm('Are you sure you want to clear your entire cart?')) {
                    clearCart();
                }
            });

            // Save cart
            $('#saveCart').on('click', function() {
                saveCart();
            });

            // Apply promo code
            $('#applyPromoCode').on('click', function() {
                const promoCode = $('#promoCode').val().trim();
                if (promoCode) {
                    applyPromoCode(promoCode);
                } else {
                    alert('Please enter a promo code.');
                }
            });

            // Functions
            function updateQuantity(cartItemId, quantity) {
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: { cartItemId: cartItemId, quantity: quantity },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Error updating quantity.');
                            location.reload();
                        }
                    },
                    error: function() {
                        alert('Error updating quantity.');
                        location.reload();
                    }
                });
            }

            function removeItem(cartItemId) {
                $.ajax({
                    url: '@Url.Action("RemoveItem", "Cart")',
                    type: 'POST',
                    data: { cartItemId: cartItemId },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Error removing item.');
                        }
                    },
                    error: function() {
                        alert('Error removing item.');
                    }
                });
            }

            function clearCart() {
                $.ajax({
                    url: '@Url.Action("ClearCart", "Cart")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Error clearing cart.');
                        }
                    },
                    error: function() {
                        alert('Error clearing cart.');
                    }
                });
            }

            function saveCart() {
                $.ajax({
                    url: '@Url.Action("SaveCart", "Cart")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            alert('Cart saved successfully!');
                        } else {
                            alert(response.message || 'Error saving cart.');
                        }
                    },
                    error: function() {
                        alert('Error saving cart.');
                    }
                });
            }

            function applyPromoCode(promoCode) {
                $.ajax({
                    url: '@Url.Action("ApplyPromoCode", "Cart")',
                    type: 'POST',
                    data: { promoCode: promoCode },
                    success: function(response) {
                        if (response.success) {
                            alert('Promo code applied successfully!');
                            location.reload();
                        } else {
                            alert(response.message || 'Invalid promo code.');
                        }
                    },
                    error: function() {
                        alert('Error applying promo code.');
                    }
                });
            }
        });
    </script>
}