@model WebApplication1.Models.Book

@{
    ViewBag.Title = "Item Added to Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <!-- Success Icon -->
                    <div class="mb-4">
                        <div class="success-icon mx-auto mb-3">
                            <i class="fas fa-check-circle fa-5x text-success"></i>
                        </div>
                        <h2 class="text-success fw-bold mb-2">Success!</h2>
                        <p class="text-muted fs-5">Item has been added to your cart</p>
                    </div>

                    <!-- Book Details -->
                    @if (Model != null)
                    {
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-8">
                                <div class="card border-light">
                                    <div class="card-body p-4">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "https://via.placeholder.com/80x120?text=Book" : Model.CoverImageUrl)" 
                                                     alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height: 120px; object-fit: cover;">
                                            </div>
                                            <div class="col-md-9 text-start">
                                                <h5 class="fw-bold text-dark mb-2">@Model.Title</h5>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-user-edit me-1"></i>by @Model.Author
                                                </p>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-tag me-1"></i>@Model.Category
                                                </p>
                                                <h4 class="text-success fw-bold mb-0">R @Model.Price.ToString("0.00")</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="d-grid gap-3">
                                <a href="@Url.Action("Index", "Cart")" class="btn btn-primary btn-lg">
                                    <i class="fas fa-shopping-cart me-2"></i>View Cart & Checkout
                                </a>
                                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-book me-2"></i>Continue Shopping
                                </a>
                                @if (Model != null)
                                {
                                    <a href="@Url.Action("Details", "Book", new { id = Model.BookId })" class="btn btn-outline-primary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Book Details
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon {
        animation: bounce 0.6s ease-in-out;
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-10px);
        }
    }
    
    .card {
        border-radius: 15px;
    }
    
    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
        border-radius: 8px;
    }
    
    .btn {
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>