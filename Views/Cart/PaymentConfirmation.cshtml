@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Icon and Message -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <div class="success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <h2 class="text-success mb-2">Payment Successful!</h2>
                <p class="text-muted mb-0">Your order has been confirmed and will be processed shortly.</p>
            </div>

            <!-- Order Confirmation Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-receipt me-2"></i>Order Confirmation
                        </h5>
                        <span class="badge bg-light text-success">Order #ORD-2024-001234</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Order Details</h6>
                            <p class="mb-1"><strong>Order Number:</strong> ORD-2024-001234</p>
                            <p class="mb-1"><strong>Order Date:</strong> @DateTime.Now.ToString("dd MMM yyyy")</p>
                            <p class="mb-1"><strong>Payment Method:</strong> Credit Card</p>
                            <p class="mb-0"><strong>Payment Status:</strong> <span class="badge bg-success">Paid</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">Shipping Address</h6>
                            <p class="mb-1">123 Main Street</p>
                            <p class="mb-1">Johannesburg, Gauteng</p>
                            <p class="mb-0">2001</p>
                        </div>
                    </div>

                    <hr>

                    <!-- Order Items -->
                    <h6 class="text-muted mb-3">Order Items</h6>
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://via.placeholder.com/50x75/007bff/ffffff?text=Book" alt="Book" class="me-3" style="width: 50px; height: 75px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">The Great Gatsby</h6>
                                                <small class="text-muted">F. Scott Fitzgerald</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">2</td>
                                    <td class="text-end">R 299.98</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://via.placeholder.com/50x75/28a745/ffffff?text=Book" alt="Book" class="me-3" style="width: 50px; height: 75px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">To Kill a Mockingbird</h6>
                                                <small class="text-muted">Harper Lee</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">1</td>
                                    <td class="text-end">R 159.99</td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="https://via.placeholder.com/50x75/dc3545/ffffff?text=Book" alt="Book" class="me-3" style="width: 50px; height: 75px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0">1984</h6>
                                                <small class="text-muted">George Orwell</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">1</td>
                                    <td class="text-end">R 189.99</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <hr>

                    <!-- Order Summary -->
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="text-muted mb-3">Order Summary</h6>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <strong>R 649.96</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping:</span>
                                <strong>R 35.00</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (15%):</span>
                                <strong>R 97.49</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-0">
                                <h6 class="mb-0">Total:</h6>
                                <h6 class="mb-0 text-success">R 782.45</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>What's Next?
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3 mb-md-0">
                            <div class="step-icon bg-success text-white mb-2">
                                <i class="fas fa-check"></i>
                            </div>
                            <h6>Order Confirmed</h6>
                            <small class="text-muted">Your payment has been processed</small>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <div class="step-icon bg-primary text-white mb-2">
                                <i class="fas fa-box"></i>
                            </div>
                            <h6>Processing</h6>
                            <small class="text-muted">Your order is being prepared</small>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <div class="step-icon bg-secondary text-white mb-2">
                                <i class="fas fa-truck"></i>
                            </div>
                            <h6>Shipping</h6>
                            <small class="text-muted">Estimated delivery: 3-5 days</small>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <div class="step-icon bg-secondary text-white mb-2">
                                <i class="fas fa-home"></i>
                            </div>
                            <h6>Delivered</h6>
                            <small class="text-muted">Your books will arrive soon</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center">
                <div class="row">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <a href="/Order/OrderDetails/1234" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-eye me-2"></i>View Order Details
                        </a>
                    </div>
                    <div class="col-md-6 mb-3 mb-md-0">
                        <a href="/Order/OrderHistory" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-history me-2"></i>View Order History
                        </a>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .success-icon {
            font-size: 5rem;
            color: #28a745;
            animation: bounce 1s ease-in-out;
        }
        
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-20px);
            }
            60% {
                transform: translateY(-10px);
            }
        }
        
        .step-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto;
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            border-radius: 12px 12px 0 0 !important;
            padding: 1.25rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #007bff, #0056b3);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
        }
        
        .btn-outline-primary {
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }
        
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 0.5rem 1rem;
        }
        
        .table-light {
            background-color: #f8f9fa;
        }
        
        .badge {
            font-size: 0.875rem;
            padding: 0.5rem 0.75rem;
        }
        
        @@media (max-width: 768px) {
            .success-icon {
                font-size: 4rem;
            }
            
            .step-icon {
                width: 50px;
                height: 50px;
                font-size: 1.25rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add fade-in animation to cards
            $('.card').hide().fadeIn(800);
            
            // Auto-redirect to order details after 10 seconds (optional)
            setTimeout(function() {
                // Uncomment the line below to enable auto-redirect
                // window.location.href = '/Order/OrderDetails/1234';
            }, 10000);
            
            // Add click tracking for analytics
            $('a[href*="/Order/"]').on('click', function() {
                console.log('User clicked on order-related link');
            });
        });
    </script>
}